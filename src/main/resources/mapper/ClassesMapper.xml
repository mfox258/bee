<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mindskip.xzs.repository.ClassesMapper">


  <select id="classesPage" resultType="com.mindskip.xzs.domain.Classes">
    select *
    from t_classes
    where deleted=0
      <if test="vm.keyword!=null and vm.keyword!=''">
        and classes like concat ('%',#{vm.keyword},'%')
      </if>
  </select>
  <select id="list" resultType="java.lang.String">
    select classes
    from t_classes
    where deleted=0
    <if test="isCount!=null">
      and is_count=#{isCount}
    </if>

  </select>
</mapper>
