<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mindskip.xzs.repository.ClassesRuleMapper">


  <select id="classesRulePage" resultType="com.mindskip.xzs.domain.ClassesRule">
    select *
    from t_classes_rule
    where deleted=0
      <if test="vm.keyword!=null and vm.keyword!=''">
        and classes like concat ('%',#{vm.keyword},'%')
      </if>
  </select>
</mapper>
